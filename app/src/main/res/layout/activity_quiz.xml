<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalyearproject.learnpashto.QuizActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/coloPrimaryLight"
    android:id="@+id/colour_quiz">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                style="@style/qCountAndLcountsLabel"
                android:id="@+id/lives"
                android:text="Lives: "
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
            <TextView
                style="@style/qCountAndLcountsLabel"
                android:id="@+id/countLabel"
                android:text="Question: "
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>

    <TextView
        android:id="@+id/questionLabel"
        style="@style/questionLabel"
        android:onClick="checkAnswer"/>

    <Button
        android:id="@+id/answerBtn1"
        style="@style/answerButton"
        android:onClick="checkAnswer"/>
    <Button
        android:id="@+id/answerBtn2"
        style="@style/answerButton"
        android:onClick="checkAnswer"/>
    <Button
        android:id="@+id/answerBtn3"
        style="@style/answerButton"
        android:onClick="checkAnswer"/>
    <Button
        android:id="@+id/answerBtn4"
        style="@style/answerButton"
        android:onClick="checkAnswer"/>
</LinearLayout>
