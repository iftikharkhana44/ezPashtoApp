<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/listStyle"
    android:id="@+id/list_colour">

    <ImageView
        android:id="@+id/image"
        style="@style/image"/>
    <LinearLayout
        android:id="@+id/text_container"
        style="@style/textContainer">
        <TextView
            android:id="@+id/Pashto_text_view"
            android:text="Pashto"
            style="@style/textViewWords"/>
        <TextView
            android:id="@+id/English_text_view"
            android:text="English"
            style="@style/textViewWords"/>
    </LinearLayout>
    <ImageView
        style="@style/audioStyle" />
</RelativeLayout>