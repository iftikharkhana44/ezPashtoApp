<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalyearproject.learnpashto.EasyQuiz"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/quizbackground"
    android:id="@+id/colour_quiz">

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="Question"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:background="@drawable/questiontextviewstyle"
        android:gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="answer1"
        android:layout_marginTop="50dp"
        android:onClick="checkAnswer"
        android:background="@drawable/answerbuttonstyle"
        android:textColor="#705e08"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="answer1"
        android:layout_marginTop="10dp"
        android:onClick="checkAnswer"
        android:background="@drawable/answerbuttonstyle"
        android:textColor="#705e08"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="answer1"
        android:layout_marginTop="10dp"
        android:onClick="checkAnswer"
        android:background="@drawable/answerbuttonstyle"
        android:textColor="#705e08"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/answerBtn4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="answer1"
        android:layout_marginTop="10dp"
        android:onClick="checkAnswer"
        android:background="@drawable/answerbuttonstyle"
        android:textColor="#705e08"
        android:textSize="18sp"/>


</LinearLayout>
