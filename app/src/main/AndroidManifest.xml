<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalyearproject.learnpashto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/play_button"/>
        <activity
            android:name=".NumbersCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_numbers"
            android:theme="@style/NumbersActivityTheme"/>
        <activity
            android:name=".ColoursCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_colours"
            android:theme="@style/ColoursActivityTheme"/>
        <activity
            android:name=".DaysCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FoodCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_food"
            android:theme="@style/FoodActivityTheme"/>
        <activity
            android:name=".AnimalsCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_animals"
            android:theme="@style/AnimalsActivityTheme"/>
        <activity
            android:name=".TransportationCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BodyPartsCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/title_body"
            android:theme="@style/BodyActivityTheme"/>
        <activity
            android:name=".QuizActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label=""/>
        <activity
            android:name=".ResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/quizResult"/>
        <activity
            android:name=".AlphabetsCategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AlphabetActivityTheme"/>
        <activity
            android:name=".CategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/learning"/>
    </application>

</manifest>